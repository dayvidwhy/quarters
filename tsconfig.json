{
    "exclude": ["node_modules", "packages/reload"], // Exclude the reload package
    "compilerOptions": {
        "lib": ["ESNext"],
        "target": "es2020",
        "module": "esnext",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "types": ["node"],
        "strictNullChecks": true,
        "baseUrl": ".", // If your base URL is set differently, it might affect path resolution
    }
  }
  